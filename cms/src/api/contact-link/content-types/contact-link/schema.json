{
  "kind": "collectionType",
  "collectionName": "contact_links",
  "info": {
    "singularName": "contact-link",
    "pluralName": "contact-links",
    "displayName": "ContactLink"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "socialMedia": {
      "type": "string"
    },
    "imageUrl": {
      "type": "string"
    },
    "text": {
      "type": "string"
    },
    "download": {
      "type": "boolean",
      "default": false
    },
    "sortOrder": {
      "type": "integer"
    },
    "link": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "download"
            },
            false
          ]
        }
      }
    },
    "file": {
      "type": "media",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "download"
            },
            true
          ]
        }
      },
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    }
  }
}
